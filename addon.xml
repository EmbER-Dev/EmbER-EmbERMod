<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.embermod"
  version="1.0.2"
  name="EmbERMod"
  provider-name="EmbER Dev, Jezz_X, Team Kodi">
  <requires>
    <import addon="xbmc.gui" version="5.3.0"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    defaultthemename="textures.xbt"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">EmbER's default skin</summary>
    <description lang="en">EmbERMod is the default skin for EmbER, it's a mod of Kodi's default skin Confluence.</description>
    <disclaimer lang="en">Removing EmbER's default skin may cause issues.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
